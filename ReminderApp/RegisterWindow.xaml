<Window x:Class="ReminderApp.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="350" Width="450" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#F3F4F6">
        <!-- Title -->
        <TextBlock Text="Register" FontSize="24" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top"/>

        <!-- Form Container -->
        <Border Background="White" CornerRadius="10" Padding="20" Margin="35,70,35,0" VerticalAlignment="Top" Height="237">
            <StackPanel>
                <!-- Email Label -->
                <TextBlock Text="Email" FontSize="14" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                <!-- Email TextBox -->
                <TextBox x:Name="EmailTextBox" Width="300" Height="35" Margin="0,0,0,15" Padding="5" BorderBrush="#CCC" BorderThickness="1" Background="#FFF"/>

                <!-- Password Label -->
                <TextBlock Text="Password" FontSize="14" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                <!-- PasswordBox -->
                <PasswordBox x:Name="PasswordBox" Width="300" Height="35" Margin="0,0,0,15" Padding="5" BorderBrush="#CCC" BorderThickness="1" Background="#FFF"/>

                <!-- Buttons Container -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <!-- Register Button -->
                    <Button Content="Register" Width="90" Height="40" Click="RegisterButton_Click" Foreground="White" Margin="0,0,10,0">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="#4CAF50" CornerRadius="5" BorderBrush="#4CAF50" BorderThickness="0">
                                    <TextBlock Text="{TemplateBinding Content}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Cancel Button -->
                    <Button Content="Cancel" Width="90" Height="40" Click="CancelButton_Click" Foreground="White">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="#F44336" CornerRadius="5" BorderBrush="#F44336" BorderThickness="0">
                                    <TextBlock Text="{TemplateBinding Content}" Foreground="{TemplateBinding Foreground}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Error Message -->
        <TextBlock x:Name="ErrorMessage" Foreground="Red" Visibility="Collapsed" HorizontalAlignment="Center" Margin="0,320,0,0" VerticalAlignment="Top" FontSize="12"/>
    </Grid>
</Window>
