<Window x:Class="ReminderApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reminder App" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F3F4F6">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4CAF50" CornerRadius="10" Padding="10">
            <TextBlock Text="Reminder App"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="0,20,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- Reminder List -->
                <ColumnDefinition Width="1*"/>
                <!-- Buttons -->
            </Grid.ColumnDefinitions>

            <!-- Reminder List -->
            <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="10" BorderBrush="#CCC" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Your Reminders"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#333"
                               Margin="0,0,0,10"/>
                    <ListBox x:Name="ReminderListBox"
         SelectionMode="Single"
         Height="361"
         Background="White"
         BorderBrush="#CCC"
         BorderThickness="1"
         Padding="5"
         HorizontalContentAlignment="Stretch"
         VerticalContentAlignment="Top">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                                    <TextBlock Text="{Binding DateTime}" FontWeight="Bold" Foreground="#333"/>
                                    <TextBlock Text="{Binding Subject}" FontStyle="Italic" Foreground="#555"/>
                                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Foreground="#777"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                </StackPanel>
            </Border>

            <!-- Buttons -->
            <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Top">
                <Button x:Name="AddReminderButton"
                        Content="Add Reminder"
                        Height="40"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,0,0,10"
                        Click="AddReminderButton_Click"/>
                <Button x:Name="DeleteReminderButton"
                        Content="Delete Reminder"
                        Height="40"
                        Background="#F44336"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,0,0,10"
                        Click="DeleteReminderButton_Click"/>
                <Button x:Name="ManageUsersButton"
                        Content="Manage Users"
                        Height="40"
                        Background="#2196F3"
                        Foreground="White"
                        FontWeight="Bold"
                        Visibility="Collapsed"
                        Margin="0,0,0,10"
                        Click="ManageUsersButton_Click"/>
      
                <Button x:Name="LogoutButton"
                        Content="Logout"
                        Height="40"
                        Background="#9E9E9E"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,0,0,0"
                        Click="LogoutButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#E0E0E0" CornerRadius="10" Padding="10">
            <TextBlock Text="© 2025 Reminder App. CTTO: Copilot github."
                       FontSize="12"
                       Foreground="#555"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
