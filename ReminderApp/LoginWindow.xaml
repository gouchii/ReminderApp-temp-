<Window x:Class="ReminderApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="400" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F3F4F6">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Login to Reminder App"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#333"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Grid.Row="0"/>

        <!-- Email Input -->
        <StackPanel Grid.Row="1" Margin="0,10,0,0">
            <TextBlock Text="Email"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#555"
                       Margin="0,0,0,5"/>
            <TextBox x:Name="EmailTextBox"
                     Height="30"
                     Padding="5"
                     Background="White"
                     BorderBrush="#CCC"
                     ToolTip="Enter your email address (e.g., user@gmail.com)"/>
        </StackPanel>

        <!-- Password Input -->
        <StackPanel Grid.Row="2" Margin="0,10,0,0">
            <TextBlock Text="Password"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#555"
                       Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox"
                         Height="30"
                         Padding="5"
                         Background="White"
                         BorderBrush="#CCC"/>
        </StackPanel>

        <!-- Error Message -->
        <TextBlock x:Name="ErrorMessage"
                   Foreground="Red"
                   Visibility="Collapsed"
                   Grid.Row="3"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,10"
                   TextAlignment="Center"
                   MaxWidth="300"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Login"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="#4CAF50"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="LoginButton_Click"/>
            <Button Content="Register"
                    Width="100"
                    Height="35"
                    Background="#2196F3"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
