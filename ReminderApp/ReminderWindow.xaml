<Window x:Class="ReminderApp.ReminderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set Reminder" Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F3F4F6">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Set a Reminder"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#333"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Grid.Row="0"/>

        <!-- Date Selection -->
        <StackPanel Grid.Row="1" Margin="0,10,0,0">
            <TextBlock Text="Select Date"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#555"
                       Margin="0,0,0,5"/>
            <DatePicker x:Name="ReminderCalendar"
                        Background="White"
                        BorderBrush="#CCC"/>
        </StackPanel>

        <!-- Time Input -->
        <StackPanel Grid.Row="2" Margin="0,10,0,0">
            <TextBlock Text="Time (HH:mm)"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#555"
                       Margin="0,0,0,5"/>
            <TextBox x:Name="TimeTextBox"
                     Height="30"
                     Padding="5"
                     Background="White"
                     BorderBrush="#CCC"
                     ToolTip="Enter time in HH:mm format (e.g., 14:30)"/>
        </StackPanel>

        <!-- Subject Input -->
        <StackPanel Grid.Row="3" Margin="0,10,0,0">
            <TextBlock Text="Subject"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#555"
                       Margin="0,0,0,5"/>
            <TextBox x:Name="SubjectTextBox"
                     Height="30"
                     Padding="5"
                     Background="White"
                     BorderBrush="#CCC"
                     ToolTip="Enter the subject of the reminder"/>
        </StackPanel>

        <!-- Description Input -->
        <StackPanel Grid.Row="4" Margin="0,10,0,0">
            <TextBlock Text="Description"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#555"
                       Margin="0,0,0,5"/>
            <TextBox x:Name="DescriptionTextBox"
                     Height="60"
                     Padding="5"
                     Background="White"
                     BorderBrush="#CCC"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     ToolTip="Enter a description for the reminder"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Save"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="#4CAF50"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="SaveReminderButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
