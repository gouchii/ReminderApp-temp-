<Window
    Height="629"
    ResizeMode="NoResize"
    Title="Set Reminder"
    Width="420"
    WindowStartupLocation="CenterScreen"
    x:Class="ReminderApp.ReminderWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FF6B6B6B" Offset="0.481"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="20,20,20,11">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Title  -->
        <TextBlock
            FontSize="28"
            FontWeight="Bold"
            Grid.Row="0"
            HorizontalAlignment="Center"
            Margin="0,0,0,20"
            Text="Set a Reminder" >
            <TextBlock.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF6D6969"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>

        <!--  Date Selection  -->
        <StackPanel Grid.Row="1" Margin="0,10,0,0">
            <TextBlock
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="#FFF3E8E8"
                Margin="0,0,0,5"
                Text="Select Date" />
            <DatePicker
                Background="#FF3C3C3C"
                BorderBrush="#D1D5DB"
                BorderThickness="1"
                Margin="0,0,0,10"
                Padding="5"
                x:Name="ReminderCalendar" />
        </StackPanel>

        <!--  Time Input  -->
        <StackPanel Grid.Row="2" Margin="0,10,0,0">
            <TextBlock
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="#FFEDE9E9"
                Margin="0,0,0,5"
                Text="Time (HH:mm)" />
            <TextBox
                BorderBrush="#D1D5DB"
                BorderThickness="1"
                Height="35"
                Margin="0,0,0,10"
                Padding="5"
                ToolTip="Enter time in HH:mm format (e.g., 14:30)"
                x:Name="TimeTextBox" Background="#FF525252" />
        </StackPanel>

        <!--  Subject Input  -->
        <StackPanel Grid.Row="3" Margin="0,10,0,0">
            <TextBlock
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="White"
                Margin="0,0,0,5"
                Text="Subject" />
            <TextBox
                BorderBrush="#D1D5DB"
                BorderThickness="1"
                Height="36"
                Margin="0,0,0,10"
                Padding="5"
                ToolTip="Enter the subject of the reminder"
                x:Name="SubjectTextBox" Background="#FF6B6B6B" />
        </StackPanel>

        <!--  Description Input  -->
        <StackPanel Grid.Row="4" Margin="0,10,0,0">
            <TextBlock
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="White"
                Margin="0,0,0,5"
                Text="Description" />
            <TextBox
                AcceptsReturn="True"
                BorderBrush="#D1D5DB"
                BorderThickness="1"
                Height="80"
                Margin="0,0,0,10"
                Padding="5"
                TextWrapping="Wrap"
                ToolTip="Enter a description for the reminder"
                x:Name="DescriptionTextBox" Background="#FF6B6B6B" />
        </StackPanel>

        <!--  Alarm Dropdown  -->
        <StackPanel Grid.Row="5" Margin="0,10,0,0">
            <TextBlock
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="#FFF7EFEF"
                Margin="0,0,0,5"
                Text="Alarm Sound" />
            <ComboBox
                Background="#FF3C3C3C"
                BorderBrush="#FF3C3C3C"
                BorderThickness="1"
                Height="35"
                HorizontalAlignment="Stretch"
                Margin="0,0,0,10"
                Padding="5"
                ToolTip="Select an alarm sound"
                VerticalContentAlignment="Center"
                x:Name="AlarmComboBox">
                <ComboBoxItem Content="Default" Tag="{x:Null}" />
            </ComboBox>
        </StackPanel>


        <!--  Buttons  -->
        <StackPanel
            Grid.Row="6"
            HorizontalAlignment="Center"
            Margin="0,20,0,0"
            Orientation="Horizontal">

            <Button
                
                Background="#10B981"
                BorderBrush="#059669"
                BorderThickness="0,0,0,0"
                Click="SaveReminderButton_Click"
                Content="Save"
                Cursor="Hand"
                FontWeight="Bold"
                Foreground="White"
                Height="40"
                Margin="0,0,10,0"
                Width="120" Padding="1,1,1,1" UseLayoutRounding="False" RenderTransformOrigin="0,0" ClickMode="Press" >
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="-2"/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>

        </StackPanel>
    </Grid>
</Window>
