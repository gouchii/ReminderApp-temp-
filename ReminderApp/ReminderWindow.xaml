<Window
    Background="#F9FAFB"
    Height="620"
    ResizeMode="NoResize"
    Title="Set Reminder"
    Width="420"
    WindowStartupLocation="CenterScreen"
    x:Class="ReminderApp.ReminderWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Title  -->
        <TextBlock
            FontSize="28"
            FontWeight="Bold"
            Foreground="#333"
            Grid.Row="0"
            HorizontalAlignment="Center"
            Margin="0,0,0,20"
            Text="Set a Reminder" />

        <!--  Date Selection  -->
        <StackPanel Grid.Row="1" Margin="0,10,0,0">
            <TextBlock
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="#555"
                Margin="0,0,0,5"
                Text="Select Date" />
            <DatePicker
                Background="White"
                BorderBrush="#D1D5DB"
                BorderThickness="1"
                Margin="0,0,0,10"
                Padding="5"
                x:Name="ReminderCalendar" />
        </StackPanel>

        <!--  Time Input  -->
        <StackPanel Grid.Row="2" Margin="0,10,0,0">
            <TextBlock
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="#555"
                Margin="0,0,0,5"
                Text="Time (HH:mm)" />
            <TextBox
                Background="White"
                BorderBrush="#D1D5DB"
                BorderThickness="1"
                Height="35"
                Margin="0,0,0,10"
                Padding="5"
                ToolTip="Enter time in HH:mm format (e.g., 14:30)"
                x:Name="TimeTextBox" />
        </StackPanel>

        <!--  Subject Input  -->
        <StackPanel Grid.Row="3" Margin="0,10,0,0">
            <TextBlock
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="#555"
                Margin="0,0,0,5"
                Text="Subject" />
            <TextBox
                Background="White"
                BorderBrush="#D1D5DB"
                BorderThickness="1"
                Height="35"
                Margin="0,0,0,10"
                Padding="5"
                ToolTip="Enter the subject of the reminder"
                x:Name="SubjectTextBox" />
        </StackPanel>

        <!--  Description Input  -->
        <StackPanel Grid.Row="4" Margin="0,10,0,0">
            <TextBlock
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="#555"
                Margin="0,0,0,5"
                Text="Description" />
            <TextBox
                AcceptsReturn="True"
                Background="White"
                BorderBrush="#D1D5DB"
                BorderThickness="1"
                Height="80"
                Margin="0,0,0,10"
                Padding="5"
                TextWrapping="Wrap"
                ToolTip="Enter a description for the reminder"
                x:Name="DescriptionTextBox" />
        </StackPanel>

        <!--  Alarm Dropdown  -->
        <StackPanel Grid.Row="5" Margin="0,10,0,0">
            <TextBlock
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="#555"
                Margin="0,0,0,5"
                Text="Alarm Sound" />
            <ComboBox
                Background="White"
                BorderBrush="#D1D5DB"
                BorderThickness="1"
                Height="35"
                HorizontalAlignment="Stretch"
                Margin="0,0,0,10"
                Padding="5"
                ToolTip="Select an alarm sound"
                VerticalContentAlignment="Center"
                x:Name="AlarmComboBox">
                <ComboBoxItem Content="Default" Tag="{x:Null}" />
            </ComboBox>
        </StackPanel>


        <!--  Buttons  -->
        <StackPanel
            Grid.Row="6"
            HorizontalAlignment="Center"
            Margin="0,20,0,0"
            Orientation="Horizontal">
            <Button
                Background="#10B981"
                BorderBrush="#059669"
                BorderThickness="0"
                Click="SaveReminderButton_Click"
                Content="Save"
                Cursor="Hand"
                FontWeight="Bold"
                Foreground="White"
                Height="40"
                Margin="0,0,10,0"
                Width="120" />
        </StackPanel>
    </Grid>
</Window>
